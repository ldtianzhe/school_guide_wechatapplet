/* pages/youlan/youlan.wxss */
@font-face {
    font-family: 'iconfont';
    src: url(data:font/truetype;charset=utf-8;base64,) format('truetype');
    font-weight: normal;
    font-style: normal;
}
.iconfont {
  font-family: "iconfont" !important;
  font-size: 16px;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.icon-down:before {
  content: "\e617";
}

.icon-up:before {
  content: "\e621";
}


.top-lbs {
  position: fixed;
  left: 0;
  top: 0;
  z-index: 100;
  min-width: 100%;
  background:#16593C;
  color: #ffffff;
}

.top-lbs__items{
  position: relative;
  overflow-x: scroll;
  -webkit-overflow-scrolling: touch;
  white-space: nowrap;
  padding: 0rpx 20rpx;
  width: 100vw;
  line-height: 100rpx;
}

.top-list-item{
  display: inline-block;
}

.top-list-item__title {
  display: inline-block;
  margin-right: 40rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  font-family: 'iconfont';
  line-height: 70rpx;
  height: 70rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 1;
  white-space: nowrap;
  font-weight: 200;
}

.active-top-border {
  border-bottom: 4rpx solid #fff;
}

map {
  display: inline-block;
  width: 100%;
  height: auto;
  position: absolute;
  top: 100rpx;
  left: 0;
  right: 0;
  bottom: 69rpx;
}

.map--has-merchant-list {
  bottom: 399rpx;
}

.lbs-merchants {
  position: absolute;
  left: 0;
  bottom: 0;
  min-width: 100%;
  background: #fff;
}

.lbs-merchants.merchants-items-hidden {
  bottom: 0;
}

.lbs-merchants__record {
  letter-spacing: 10rpx;
  border-bottom: 1rpx solid #eee;
  width: 100vw;
  padding: 20rpx 0;
  text-align: center;
  font-size: 24rpx;
  color: #16593C;
}

.lbs-merchants__toggle {
  font-size: 30rpx;
  display: inline-block;
}

.lbs-merchants__items {
  position: relative;
  overflow-x: scroll;
  -webkit-overflow-scrolling: touch;
  white-space: nowrap;
  padding: 20rpx 20rpx;
  width: 100vw;
}

.list-item,
.list-item__img {
  display: inline-block;
}

.list-item {
  margin-right: 20rpx;
}

.list-item__title {
  display: block;
  width: 280rpx;
  box-sizing: border-box;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  line-height: 32rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 1;
  white-space: nowrap;
  font-weight: 200;
}

.list-item__img {
  box-sizing: content-box;
  width: 280rpx;
  height: 198rpx;
  line-height: 0;
  background-color: #FFF;
  background-size: cover;
  background-repeat: no-repeat;
}

.active-merchant-border {
  border-top: 8rpx solid #16593C;
}

